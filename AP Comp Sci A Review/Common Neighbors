public class Challenge
{
    public static int[] commonNeighbors (int[] list)
    {
        if (list[0]!=list[1])
            list[0] = 0;

        if (list[list.length-1]!=list[list.length-2])
            list[list.length-1] = 0;

        for (int i = 1; i<list.length-1; i++)
        {
            if (list[i]!=list[i-1] && list[i]!=list[i+1])
                list[i]=0;
        }
        return list;
    }
}
